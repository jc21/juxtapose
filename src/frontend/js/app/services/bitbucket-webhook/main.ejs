<div class="modal-dialog">
    <div class="modal-content">
        <form class="form-horizontal">
            <div class="modal-header text-left">
                <h4 class="modal-title"><% if (typeof id !== 'undefined') { %>Edit<% } else { %>New<% } %> Bitbucket Webhook</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Webhook Name</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="" name="name" value="<%- name %>" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Validation Key</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="" name="validation_key" value="<%- typeof data.validation_key !== 'undefined' ? data.validation_key : generateValidationKey() %>" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">URL of site</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="http://your.bitbucketserver.com" name="url" value="<%- typeof data.url !== 'undefined' ? data.url : '' %>" required>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <% if (typeof id !== 'undefined') { %><button type="button" class="btn btn-danger delete pull-left">Delete</button><% } %>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-accent save">Save</button>
            </div>
        </form>
    </div>
</div>
