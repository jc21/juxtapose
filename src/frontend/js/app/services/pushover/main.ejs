<div class="modal-dialog">
    <div class="modal-content">
        <form class="form-horizontal">
            <div class="modal-header text-left">
                <h4 class="modal-title"><% if (typeof id !== 'undefined') { %>Edit<% } else { %>New<% } %> Pushover</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Service Name</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="" name="name" value="<%- name || 'Pushover' %>" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">App Token</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="" name="app_token" value="<%- typeof data.app_token !== 'undefined' ? data.app_token : '' %>">
                        <small>(leave blank for default Juxtapose App)</small>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <% if (typeof id !== 'undefined') { %><button type="button" class="btn btn-danger delete pull-left">Delete</button><% } %>

                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-accent save">Save</button>
            </div>
        </form>
    </div>
</div>
