<div class="modal-dialog">
    <div class="modal-content">
        <form class="form-horizontal">
            <div class="modal-header text-left">
                <h4 class="modal-title"><% if (typeof id !== 'undefined') { %>Edit<% } else { %>New<% } %> Jabber Bot</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Bot Name</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="" name="name" value="<%- name %>" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Jabber Server</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" placeholder="talk.google.com" name="server" value="<%- typeof data.server !== 'undefined' ? data.server : '' %>" required>
                    </div>
                    <div class="col-sm-2">
                        <input type="number" class="form-control" placeholder="5222" name="port" min="1" max="65555" step="1" value="<%- typeof data.port !== 'undefined' ? data.port : '' %>" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Authentication</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" placeholder="user@domain.com" name="jid" value="<%- typeof data.jid !== 'undefined' ? data.jid : '' %>" required>
                    </div>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" placeholder="password" name="password" value="<%- typeof data.password !== 'undefined' ? data.password : '' %>" required>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <% if (typeof id !== 'undefined') { %><button type="button" class="btn btn-danger delete pull-left">Delete</button><% } %>

                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-accent save">Save</button>
            </div>
        </form>
    </div>
</div>
