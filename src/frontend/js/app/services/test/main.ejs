<div class="modal-dialog">
    <div class="modal-content">
        <form class="form-horizontal">
            <div class="modal-header text-left">
                <h4 class="modal-title">Test <%- name %></h4>
            </div>
            <div class="modal-body">
                <% if (type === 'slack') { %>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Username / Room</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" placeholder="" name="username" value="" required>
                        </div>
                    </div>
                <% } else if (type === 'jabber') { %>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">User</label>
                        <div class="col-sm-9">
                            <select class="form-control" name="username" required>
                                <option value="">Loading...</option>
                            </select>
                        </div>
                    </div>
                <% } else if (type === 'pushover') { %>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">User Token</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" placeholder="" name="username" value="" required>
                        </div>
                    </div>
                <% } %>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Message</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="" name="message" value="" required>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-accent send">Send</button>
            </div>
        </form>
    </div>
</div>
