<div class="modal-dialog">
    <div class="modal-content">
        <form class="form-horizontal">
            <div class="modal-header text-left">
                <h4 class="modal-title"><% if (typeof id !== 'undefined') { %>Edit<% } else { %>New<% } %> Ntfy</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Service Name</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="" name="name" value="<%- name || 'Ntfy' %>" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Server URL</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="" name="server" value="<%- typeof data.server !== 'undefined' ? data.server : 'https://ntfy.sh' %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">API Token</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="" name="token" value="<%- typeof data.token !== 'undefined' ? data.token : '' %>" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Default Topic</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="" name="topic" value="<%- typeof data.topic !== 'undefined' ? data.topic : 'juxtapose' %>" required>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <% if (typeof id !== 'undefined') { %><button type="button" class="btn btn-danger delete pull-left">Delete</button><% } %>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-accent save">Save</button>
            </div>
        </form>
    </div>
</div>
